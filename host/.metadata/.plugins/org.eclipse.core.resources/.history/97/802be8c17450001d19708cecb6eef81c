#include <stdio.h>


int main(void)
{
	float num1, num2, num3;
	printf("Enter first number: ");
	scanf("%f", &num1);
	printf("Enter second number: ");
	scanf("%f", &num2);
	printf("Enter third number: ");
	scanf("%f", &num3);
	printf("\nAverage: %0.2f\n", (num1 + num2 + num3) / 3);

	printf("Press enter key to exit the application \n");
	while(getchar() != '\n')
	{

	}
	getchar();
	return 0;

}
