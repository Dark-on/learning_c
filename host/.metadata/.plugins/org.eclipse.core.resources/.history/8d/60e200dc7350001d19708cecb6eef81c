#include <stdio.h>


int main(void)
{
	float num1, num2, num3;
	printf("\nEnter first number: ");
	scanf("%f", &num1);
	printf("\nEnter second number: ");
	scanf("%f", &num2);
	printf("\nEnter third number: ");
	scanf("%f\n", &num3);
	printf("\nAverage: %0.2f", (num1 + num2 + num3) / 3);

	getchar();

	return 0;

}
